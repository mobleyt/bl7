<% if show_doc_actions? %>
  <div class="card show-tools">
    <div class="card-header">
      <h2 class="mb-0 h6"><%= t('blacklight.tools.title') %></h2>
    </div>

    <ul class="list-group list-group-flush">
      <%= render_show_doc_actions @document do |config, inner| %>
        <li class="list-group-item <%= config.key %>">
          <%= inner %>
        </li>
      <% end %>
      <li class="list-group-item">
        <a style="color:#660000;cursor:pointer;" id="permaLink" data-toggle="modal" data-target="#permaModal" class="nav-link">Permalink</a>
      </li>
    </ul>
  </div>
<% end %>


<%= render "catalog/permalink" %>
